<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">500dp</item>
        <item name="android:background">@drawable/container_componentes</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ContainerComponents_cadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">630dp</item>
        <item name="android:background">@drawable/container_componentes</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/btn_azul</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="Edit_text_cadastro">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Edit_text_cadastro_meio">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="btn_foto">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/btn_azul</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="btn_cadastrar">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/btn_azul</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.5</item>
    </style>
    <style name="btn_excluir">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">

        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


        <style name="CustomMenuItem" parent="Widget.AppCompat.ActionButton">
            <item name="android:background">#000000</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:iconTint">#FFFFFF</item>
        </style>






</resources>
