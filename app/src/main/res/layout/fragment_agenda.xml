<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fundoimg"
        tools:context=".view.Agendamento">


        <Spinner
            android:id="@+id/profissionalSpinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:background="@color/tBlack"
            android:spinnerMode="dropdown" />
        <Spinner
            android:id="@+id/servicoSpinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@color/tBlack"
            android:spinnerMode="dropdown" />






        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:cardBackgroundColor="@color/tBlack">

            <TextView
                android:id="@+id/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="calendar"
                app:theme="@style/CustomDatePickerDialog"
                android:background="@color/tBlack"
                android:visibility="gone" >

            </DatePicker>

        </LinearLayout>





        <GridLayout
            android:id="@+id/horariosLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:padding="11dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"/>


         <Button
            android:id="@+id/botaoHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botao_selector"
            android:text="HorÃ¡rio"
            android:textColor="@color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/btAgendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agendar"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/Azul"
            app:cornerRadius="10dp"
            android:layout_margin="40dp"/>

    </LinearLayout>
</ScrollView>