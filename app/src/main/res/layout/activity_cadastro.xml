<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FormLoginActivity">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fundoimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <CheckBox
            android:id="@+id/checkBoxCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Cadastrar Cliente"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <CheckBox
            android:id="@+id/checkBoxProfissional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Cadastrar Profissional"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxCliente" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/containerComponentes"
            style="@style/ContainerComponents_cadastro"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintVertical_bias="0.483" />

        <TextView
            android:id="@+id/text_dados_pessoais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Dados Pessoais"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toTopOf="@id/containerComponentes" />

        <View
            android:id="@+id/linha_divisoria_dados_pessoais"
            android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/containerComponentes"
        app:layout_constraintEnd_toEndOf="@id/containerComponentes"
        app:layout_constraintTop_toBottomOf="@id/text_dados_pessoais" />


        <EditText
            android:id="@+id/nomecompleto"
            style="@style/Edit_text_cadastro"
            android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_nome"
        android:hint="Nome"
        android:inputType="textAutoComplete"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@id/containerComponentes"
        app:layout_constraintTop_toBottomOf="@id/text_dados_pessoais" /> <!-- Aqui você deve referenciar o TextView -->

        <EditText
            android:id="@+id/edit_cpf"
            style="@style/Edit_text_cadastro"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_cpf"
            android:hint="CPF"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/nomecompleto" />

        <EditText
            android:id="@+id/edit_email"
            style="@style/Edit_text_cadastro"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/edit_cpf" />

        <ImageView
            android:id="@+id/imagem_Perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/edit_telefone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nomecompleto"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:srcCompat="@drawable/foto_perfil" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_foto"
            style="@style/btn_foto"
            android:layout_marginStart="40dp"
            android:text="@string/btn_foto"
            app:layout_constraintBottom_toTopOf="@+id/edit_telefone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.714"
            app:layout_constraintStart_toEndOf="@+id/edit_nascimento"
            app:layout_constraintTop_toBottomOf="@id/imagem_Perfil"
            app:layout_constraintVertical_bias="0.146" />

        <EditText
            android:id="@+id/edit_nascimento"
            style="@style/Edit_text_cadastro"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_agenda"
            android:hint="Data de nascimento "
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/edit_email" />


        <TextView
            android:id="@+id/text_contato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Contato"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/edit_nascimento" />

        <View
            android:id="@+id/linha_divisoria_contato"
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintEnd_toEndOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/text_contato" />

        <EditText
            android:id="@+id/edit_celular"
            style="@style/Edit_text_cadastro_meio"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-5dp"
            android:drawableRight="@drawable/ic_cellphone"
            android:hint="Celular"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toStartOf="@id/edit_telefone"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/text_contato" />


        <EditText
            android:id="@+id/edit_telefone"
            style="@style/Edit_text_cadastro_meio"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_phone"
            android:hint="Telefone"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@id/containerComponentes"
            app:layout_constraintStart_toEndOf="@id/edit_celular"
            app:layout_constraintTop_toBottomOf="@id/text_contato" />

        <TextView
            android:id="@+id/text_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Endereço"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/edit_celular" />

        <View
            android:id="@+id/linha_divisoria_endereco"
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintEnd_toEndOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/text_endereco" />

        <EditText
            android:id="@+id/edit_cep"
            style="@style/Edit_text_cadastro_meio"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"

            android:hint="CEP"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toStartOf="@id/edit_telefone"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/text_endereco" />

        <EditText
            android:id="@+id/edit_cidade"
            style="@style/Edit_text_cadastro_meio"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"

            android:hint="Cidade"
            android:inputType="textAutoComplete"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@id/containerComponentes"
            app:layout_constraintStart_toEndOf="@id/edit_celular"
            app:layout_constraintTop_toBottomOf="@id/text_endereco" />

        <EditText
            android:id="@+id/edit_complemento"
            style="@style/Edit_text_cadastro_meio"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="4dp"
            android:hint="Comp"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@id/containerComponentes"
            app:layout_constraintHorizontal_bias="0.824"
            app:layout_constraintStart_toEndOf="@+id/edit_casa"
            app:layout_constraintTop_toBottomOf="@id/edit_cep" />

        <EditText
            android:id="@+id/edit_rua"
            style="@style/Edit_text_cadastro_meio"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"

            android:hint="Rua"
            android:inputType="textAutoComplete"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toStartOf="@id/edit_telefone"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/edit_cep" />

        <EditText
            android:id="@+id/edit_casa"
            style="@style/Edit_text_cadastro_meio"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            android:hint="Nº"
            android:inputType="textAutoComplete"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toEndOf="@id/edit_rua"
            app:layout_constraintTop_toBottomOf="@id/edit_cep" />

        <EditText
            android:id="@+id/edit_senha"
            style="@style/Edit_text_cadastro_meio"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:drawableRight="@drawable/ic_eye"
            android:hint="Senha"
            android:inputType="numberPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toStartOf="@id/edit_telefone"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@id/edit_rua" />

        <EditText
            android:id="@+id/edit_senha_confirma"
            style="@style/Edit_text_cadastro_meio"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_eye"
            android:hint="Confima Senha"
            android:inputType="numberPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@id/containerComponentes"
            app:layout_constraintStart_toEndOf="@id/edit_celular"
            app:layout_constraintTop_toBottomOf="@id/edit_rua" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.49" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Cadastrar"
            style="@style/btn_cadastrar"
            android:layout_marginTop="30dp"
            android:text="@string/btn_cadastrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_senha" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
