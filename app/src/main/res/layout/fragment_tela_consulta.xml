<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.consulta.Tela_consulta">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/fundoimg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ImageButton e TextView para Cliente -->

        <ImageButton
            android:id="@+id/imageCliente"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:background="@color/transparente"
            android:scaleType="fitXY"
            android:src="@drawable/barba_3"

            app:layout_constraintBottom_toTopOf="@+id/imageServico"
            app:layout_constraintEnd_toStartOf="@+id/imageFuncionario"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.61" />

        <TextView
            android:id="@+id/textCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Consultar Cliente"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageCliente"
            app:layout_constraintStart_toStartOf="@+id/imageCliente"
            app:layout_constraintTop_toBottomOf="@+id/imageCliente" />



        <ImageButton
            android:id="@+id/imageFuncionario"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:background="@color/transparente"
            android:scaleType="fitXY"
            android:src="@drawable/funcionario"

            app:layout_constraintBottom_toTopOf="@+id/imageProduto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageCliente"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.619" />

        <TextView
            android:id="@+id/textFuncionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Consultar Funcionário"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageFuncionario"
            app:layout_constraintStart_toStartOf="@+id/imageFuncionario"
            app:layout_constraintTop_toBottomOf="@+id/imageFuncionario" />

        <!-- ImageButton e TextView para Serviço -->

        <ImageButton
            android:id="@+id/imageServico"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="232dp"
            android:adjustViewBounds="true"
            android:background="@color/transparente"
            android:scaleType="fitXY"
            android:src="@drawable/servico"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageProduto"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Consultar Serviço"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageServico"
            app:layout_constraintStart_toStartOf="@+id/imageServico"
            app:layout_constraintTop_toBottomOf="@+id/imageServico" />

        <!-- ImageButton e TextView para Produto -->

        <ImageButton
            android:id="@+id/imageProduto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="236dp"
            android:adjustViewBounds="true"
            android:background="@color/transparente"
            android:scaleType="fitXY"
            android:src="@drawable/produto2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageServico" />

        <TextView
            android:id="@+id/textProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Consultar Produto"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageProduto"
            app:layout_constraintStart_toStartOf="@+id/imageProduto"
            app:layout_constraintTop_toBottomOf="@+id/imageProduto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>